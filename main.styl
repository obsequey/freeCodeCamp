font = 'Source Sans Pro', sans-serif
hellocolor = #e1f5fe
textcolor = #4A6E7E
secondarytextcolor = #707A7E
textactive = #039be5
projectscolor = #fff
contactscolor = #b3e5fc
footercolor = #81d4fa
animation = color .3s ease-in-out
*
  padding 0
  margin 0
  text-decoration none
  list-style: none
  color textcolor
html
  font-family: font
  font-size 16px
  text-align center
.navbar
  position fixed
  top 0
  background-color hellocolor
  width 100%
  &__list
    display flex
    justify-content space-between
    &__item
      padding 1rem
      &__link
        transition animation
        &:hover
          color textactive
main
  .hello
    height 100vh
    display flex
    align-items: center
    justify-content: center
    background-color: hellocolor
    &__message
      &__text
        color secondarytextcolor
  .projects
    background-color projectscolor
    display flex
    flex-direction column
    justify-content center
    &__header
      font-size 1.5rem
      margin 2rem 0 0 0
    &__list
      &__item
        margin 2rem
        border 1px solid textcolor
        border-radius 3px
        transition animation
        &:hover
          border-color textactive
          color textactive
        &__link
          width 100%
          &__img
            width 100%
          &__header
            padding .5rem
            transition animation
            &:hover
              color textactive
